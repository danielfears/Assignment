<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlickrApp"
    android:background="#ffffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#5677fc"
        android:id="@+id/topbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travelocity"
            android:layout_centerVertical="true"
            android:textSize="30dp"
            android:layout_marginLeft="200dp"
            android:textColor="#fff"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg"
        android:layout_below="@+id/topbar"
        android:id="@+id/picture">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_below="@+id/picture">


        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/btnLocations"
            android:background="@drawable/travelbutton" />

        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/btnProfile"
            android:background="@drawable/profilebutton"
            android:layout_toRightOf="@+id/btnLocations"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created by Daniel Fears"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
